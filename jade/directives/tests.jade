div.tests(ng-if="tests.results", ng-class="{'passed' : tests.isPassed(), 'failed' : !tests.isPassed()}")
  h4(ng-if="tests.results.total > 1")
    span.icon
    |  {{tests.results.passed}} / {{tests.results.total}}

  ul
    li(ng-repeat="test in tests.results.tests", ng-class="test.type|lowercase")
      span.icon
      |  {{test.name}}
